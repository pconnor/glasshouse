!!!
%html
  %head
    %title Glasshouseproject
    = stylesheet_link_tag    "jqtouch.css", "mobile.css"
    = javascript_include_tag "jquery-1.4.2.min.js", "jqtouch.js", "mobile.js"
    = csrf_meta_tags
  %body
    .current
      - if show_title?
        .toolbar
          = link_to "Back", nil, :class => "back" unless current_page? root_path
          = link_to "Full Site", root_url(:mobile => 0), :class => "button", :rel => "external"
          = yield(:toolbar)
      = unless flash.empty?
        .info
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash#{name}"
      = yield